<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/ll_titlebar_back_btn"
            android:layout_width="@dimen/common_titlebar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_titlebar_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/common_btn_back_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:maxWidth="240dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="titlebar_title" />

        <TextView
            android:id="@+id/tv_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_btn_titleright_bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:text="titlebar_right"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>
</layout>